<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <script src="/js/header.js" defer></script>
    <script src="/js/default.js" defer></script>
    <script src="/js/fetch.js"></script>

    <link rel="stylesheet" href="/css/products.css" />
    <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
    <%- include("../partials/header") %>
    <main class="container">
        <h1><%= title %></h1>

        <form class="products-filter-form" method="get" action="/api/products" data-products-filter-form>
            <div class="filter-row">
                <label for="search">Search</label>
                <input
                    id="search"
                    name="search"
                    type="text"
                    placeholder="Search name, description, category"
                    value="<%= filters?.search || '' %>"
                />
            </div>

            <div class="filter-row">
                <label for="name">Product Name</label>
                <input
                    id="name"
                    name="name"
                    type="text"
                    placeholder="Filter by name"
                    value="<%= filters?.name || '' %>"
                />
            </div>

            <div class="filter-row">
                <label for="category">Category</label>
                <select id="category" name="category">
                    <option value="">All categories</option>
                    <% (categories || []).forEach(category => { %>
                        <option
                            value="<%= category.id %>"
                            <%= Number(filters?.category) === Number(category.id) ? 'selected' : '' %>
                        >
                            <%= category.name %>
                        </option>
                    <% }) %>
                </select>
            </div>

            <div class="filter-row filter-row--small">
                <label for="minPrice">Min Price</label>
                <input
                    id="minPrice"
                    name="minPrice"
                    type="number"
                    step="0.01"
                    min="0"
                    placeholder="0.00"
                    value="<%= filters?.minPrice ?? '' %>"
                />
            </div>

            <div class="filter-row filter-row--small">
                <label for="maxPrice">Max Price</label>
                <input
                    id="maxPrice"
                    name="maxPrice"
                    type="number"
                    step="0.01"
                    min="0"
                    placeholder="999.99"
                    value="<%= filters?.maxPrice ?? '' %>"
                />
            </div>

            <div class="filter-row filter-row--small">
                <label for="sort">Sort By</label>
                <select id="sort" name="sort">
                    <option value="id" <%= (filters?.sort || 'id') === 'id' ? 'selected' : '' %>>Default</option>
                    <option value="name" <%= filters?.sort === 'name' ? 'selected' : '' %>>Name</option>
                    <option value="price" <%= filters?.sort === 'price' ? 'selected' : '' %>>Price</option>
                </select>
            </div>

            <div class="filter-row filter-row--small">
                <label for="direction">Direction</label>
                <select id="direction" name="direction">
                    <option value="asc" <%= (filters?.direction || 'asc') === 'asc' ? 'selected' : '' %>>Ascending</option>
                    <option value="desc" <%= filters?.direction === 'desc' ? 'selected' : '' %>>Descending</option>
                </select>
            </div>

            <div class="filter-actions">
                <button type="submit">Apply Filters</button>
                <a class="filter-clear" href="/api/products">Clear</a>
            </div>
        </form>

        <p class="products-count" data-products-count><%= resultCount || 0 %> result(s)</p>

        <% if (products && products.length > 0) { %>
            <section class="products-grid" data-products-grid>
                <% products.forEach(product => { %>
                    <article class="product-card">
                        <div class="product-card-media">
                            <a href="/api/products/<%= product.id %>" class="product-card-link-media" aria-label="View details for <%= product.name %>">
                            <img
                                src="<%= product.image_url || 'https://via.placeholder.com/640x420?text=No+Image' %>"
                                alt="<%= product.name %>"
                                loading="lazy"
                            />
                            </a>
                        </div>
                        <div class="product-card-body">
                            <h2 class="product-card-title"><a href="/api/products/<%= product.id %>" class="product-card-link"><%= product.name %></a></h2>
                            <p class="product-card-description"><%= product.description %></p>
                            <div class="product-card-meta">
                                <span class="product-card-category"><%= product.category_name || 'Uncategorized' %></span>
                                <strong class="product-card-price">$<%= Number(product.price).toFixed(2) %></strong>
                            </div>
                            <a href="/api/products/<%= product.id %>" class="product-card-details">View Details</a>
                        </div>
                    </article>
                <% }) %>
            </section>
        <% } else { %>
            <p data-products-empty>No products matched your filters.</p>
        <% } %>
    </main>

    <%- include("../partials/footer") %>
</body>
</html>
